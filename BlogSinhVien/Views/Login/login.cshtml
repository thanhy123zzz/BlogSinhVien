@model BlogSinhVien.Models.EntitiesNew.Accounts
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    @if (TempData["LoginFailed"] != null)
		{
			<script type="text/javascript" charset="utf-8">
				window.onload = function () {
				alert("Đăng nhập thất bại");
			};
			</script>
		}
    <div class="the-end">
        <div class="the-end__first">
        </div>
        <div class="the-end__second">
            <div class="the-end__second-one">
                <img src="/images/logo.png" alt="" style="width: 60%;">
            </div>
            <div class="the-end__second-two">
                <div class="container">
                </div>
                <div class="login-content">
                    <form asp-controller="Login" asp-action="LoginUser" method="post">
                        <h2 class="title">Welcome</h2>
                        <div class="input-div one">
                            <div class="i">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="div">
                                <h5>Tài khoản</h5>
                                <input asp-for="TaiKhoan" type="text" class="input">
                            </div>
                        </div>
                        <div class="input-div pass">
                            <div class="i">
                                <i class="fas fa-lock"></i>
                            </div>
                            <div class="div">
                                <h5>Mật khẩu</h5>
                                <input asp-for="MatKhau" type="password" class="input">
                            </div>
                        </div>
                        <a href="#" id="myBtn">Quên mật khẩu</a>
                        <input type="submit" class="btn" value="Login">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--Modal-->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2 class="title-modal">NHẬP EMAIL EDU</h2>
            <div class="login-content">
                <form id="formEmail">
                    <div class="input-div one" style="margin-bottom: 16px;">
                        <div class="i">
                            <i class="fa fa-envelope"></i>
                        </div>
                        <div class="div">
                            <h5>abcxyz@hcmunre.edu.vn</h5>
                            <input onkeyup="AnThongBao()" id="emailForm" type="email" class="input">
                        </div>
                    </div>
                        <div id="messEmail" style="display: none;">
                           <h6 style="color:red; font-size:14px; text-align:start;">Không đúng định dạng</h6>
                        </div>
                        <div id="errorEmail" style="display: none;">
                           <h6 style="color:red; font-size:14px; text-align:start;">Email không tồn tại</h6>
                        </div>
                    <input type="button" class="btn" value="Gửi mã" id="sendBtn">
                    <div id="loader" style="display: none;"></div>
                </form>
            </div>
        </div>
    </div>

    <div id="myModal2" class="modal">
        <div class="modal-content">
            <span class="close" onclick="close_modal()">&times;</span>
            <h2 class="title-modal">MÃ XÁC NHẬN</h2>
            <div class="login-content">
                <form>
                    <div class="input-div one style="margin-bottom: 16px;"">
                        <div class="i">
                            <i class="fa fa-code"></i>
                        </div>
                        <div class="div">
                            <h5>Code</h5>
                            <input id="code" onkeyup="AnTBCode()" type="number" max="9999" min="1000" class="input">
                        </div>
                    </div>
                    <div id="errorCode" style="display: none;">
                           <h6 style="color:red; font-size:14px; text-align:start;">Sai mã code, mời nhập lại!</h6>
                        </div>
                    <input onclick="confirmCode()" type="button" class="btn" value="Xác nhận" id="comfirmBtn">
                </form>
            </div>
        </div>
    </div>

    <div id="myModal3" class="modal">
        <div class="modal-content">
            <span class="close" onclick="close_modal()">&times;</span>
            <h2 class="title-modal">ĐỔI MẬT KHẨU</h2>
            <div class="login-content">
                <form>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            <h5>Nhập mật khẩu</h5>
                            <input id="pass" type="password" class="input">
                        </div>
                    </div>
                    <div class="input-div one">
                        <div class="i">
                            <i class="fas fa-lock"></i>
                        </div>
                        <div class="div">
                            <h5>Nhập lại mật khẩu</h5>
                            <input id="passconfirm" type="password" class="input">
                        </div>
                    </div>
                    <div id="errorPass" style="display: none;">
                           <h6 style="color:red; font-size:14px; text-align:start;">Error</h6>
                        </div>
                    <input type="button" id="btnDoi" onclick="DoiMatKhau()" disabled style="cursor:auto;" class="btn" value="Đổi">
                    <div id="loader2" style="display: none;"></div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="/js/login.js"></script>
</body>

</html>