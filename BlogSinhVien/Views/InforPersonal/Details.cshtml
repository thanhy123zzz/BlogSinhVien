	<script>
		function CancelAvt(event){
			event.preventDefault();
			document.getElementById("formAvt").style.display = "none";
			document.getElementById("image-avt").src = '@Html.Raw(getImage(getSinhVien(User.FindFirst("MaSV").Value).HinhAnh))';
		}
		function readURL(input) {
			if (input.files && input.files[0]) {
				var reader = new FileReader();

				reader.onload = function (e) {
					$('#image-avt')
						.attr('src', e.target.result);
				};

				reader.readAsDataURL(input.files[0]);
			}
			document.getElementById("formAvt").style.display = "block";
		}
		function uploadFiles(event) {
			 event.preventDefault();
			var input = document.getElementById("data-avt");
			var files = input.files;
			var formData = new FormData();

			for (var i = 0; i != files.length; i++) {
			formData.append("files", files[i]);
			}
			 $.ajax(
			{
				url: "/update-avt",
				data: formData,
				processData: false,
				contentType: false,
				type: "POST",
				  success: function (data) {
					  if(data){
						alert("Đổi ảnh đại diện thành công!");
						document.getElementById("formAvt").style.display = "none";
					  }
					  else{
						  alert("Thất bại xin thử lại!");
						  document.getElementById("formAvt").style.display = "none";
					  }
				  }
				}
			  );
			}
	</script>